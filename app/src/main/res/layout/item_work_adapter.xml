<?xml version="1.0" encoding="utf-8"?>
<com.ys.uilibrary.swip.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_root_swp"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="60dip"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_root_ry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/apptheme_bg">

            <itbour.onetouchshow.custom.RoundImageView
                android:id="@+id/id_ig_av"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                app:borderRadius="4dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/id_ig_av"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/id_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/id_tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/app_smile_text_color"
                    android:textSize="12sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tag_bg"
                    android:gravity="center"
                    android:text="视频"
                    android:textColor="@color/inching_add_button"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="2013-19-13"
                    android:textColor="@color/app_smile_text_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            style="@style/while_Line"
            android:layout_height="2dip"
            android:background="@color/apptheme" />
    </LinearLayout>

    <include layout="@layout/include_right_swipe" />
</com.ys.uilibrary.swip.SwipeMenuLayout>